{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": "off",
        "no-console": "off",
        "no-debugger": "off",
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        // indent
        "indent": [
            "error",
            4
        ],
        // linebreak
        "linebreak-style": [
            "error",
            "unix"
        ]
    }
}